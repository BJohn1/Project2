      <form action="/comments/lineupcomment/<%= id %>" method="POST">
        <textarea name="comment" class="white-text"></textarea>
        <button type="submit" class="btn white-text">Add Comment</button>
      </form>
      <% lineup.comment.forEach( c => { %> 
        <ul>
        <li><%= c.comment %>
          <a href="/comments/edit/<%= c._id %>">Edit Comments</a>
